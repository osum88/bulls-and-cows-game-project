@page
@model IndexModel
@{
    ViewData["Title"] = "Bulls and Cows";
}

<div class="text-center mt-5">
    <h1 class="display-4 mb-5">Welcome to Bulls and Cows</h1>

    <h3 class="mb-4">Select difficulty:</h3>

    <form method="get" action="/Game">
        <div class="d-flex justify-content-center gap-4 flex-wrap mb-5">
            <div>
                <input type="radio" class="btn-check" name="difficulty" id="easy" value="easy" checked>
                <label class="btn btn-outline-primary btn-lg" for="easy">
                    Easy<br />
                    <small>Unlimited attempts</small>
                </label>
            </div>

            <div>
                <input type="radio" class="btn-check" name="difficulty" id="normal" value="normal">
                <label class="btn btn-outline-warning btn-lg" for="normal">
                    Normal<br />
                    <small>15 attempts</small>
                </label>
            </div>

            <div>
                <input type="radio" class="btn-check" name="difficulty" id="hard" value="hard">
                <label class="btn btn-outline-danger btn-lg" for="hard">
                    Hard<br />
                    <small>5 attempts</small>
                </label>
            </div>
        </div>

        <div class="mt-5">
            <button type="submit" class="btn btn-success btn-xl px-5 py-3">Start Game</button>
        </div>
    </form>
</div>
